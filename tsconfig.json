{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-native"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
